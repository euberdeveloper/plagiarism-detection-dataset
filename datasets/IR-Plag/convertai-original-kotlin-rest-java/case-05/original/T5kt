package IR

fun main(args: Array<String>) {
    println("Enter an integer: ")
    val input = java.util.Scanner(System.`in`)
    val number = input.nextInt()
    reverse(number)
}

fun reverse(number: Int) {
    var num = number
    while (num != 0) {
        val remainder = num % 10
        print(remainder)
        num /= 10
    }
    println()
}

